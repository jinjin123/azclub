        <div>{{ content["field_az_clinical_page_image"] }}</div>
        <div class="az-clinical-rbx_logo"> {{ content['field_field_az_clinical_param_lo'] }}</div>
        <div>{{ content["field_az_clinical_title"] }}</div>
        <div>{{ content["field_az_clinical_short_desc"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Area:</label> {{ content["field_az_area"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Sex:</label> {{ content["field_az_se"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Status:</label> {{ content["field_az_status"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Location:</label> {{ content["field_az_location"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Trial Name:</label> {{ content["field_az_trial_name"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Conditions:</label> {{ content["field_az_conditions_term"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Phase:</label> {{ content["field_az_phase"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Age:</label> {{ content["field_az_clinical_age"] }}</div>
        <div class="az-clinical-rbx__boom"><label>Body:</label> {{ content["field_az_body"] }}</div>

        <div class="az-clinical-bottom-box">
            <span>Trial company logo</span>
            <div>
              <button>Email</button>
              <button>Print</button>
            </div>
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
